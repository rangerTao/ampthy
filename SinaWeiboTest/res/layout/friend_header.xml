<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:id="@+id/rlFriendHeader">
	<ImageView android:id="@+id/ivFriendHeader"
		android:layout_width="96dip" android:layout_height="96dip"
		android:layout_alignParentLeft="true" android:layout_alignParentTop="true" />
	<TextView android:id="@+id/tvFriendName" android:layout_width="wrap_content"
		style="@style/TextView" android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/ivFriendHeader"
		android:layout_alignTop="@+id/ivFriendHeader" android:paddingLeft="10dip" />
	<TextView android:id="@+id/tvLocation" android:layout_width="wrap_content"
		style="@style/TextView" android:layout_height="wrap_content"
		android:layout_alignParentRight="true" />
	<TextView android:id="@+id/tvFriendStatus" style="@style/TextView"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/tvFriendName" android:layout_alignLeft="@+id/tvFriendName"
		android:visibility="gone" />
	<TextView android:id="@+id/tvFollwerCount" style="@style/TextView"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/tvFriendStatus" android:layout_alignLeft="@+id/tvFriendName"
		android:paddingLeft="15dip" />
	<TextView android:id="@+id/tvFansCount" style="@style/TextView"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/tvFriendStatus"
		android:layout_alignParentRight="true" android:paddingRight="15dip" />
	<TextView android:id="@+id/tvFocused" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_below="@+id/tvFollwerCount"
		android:layout_alignLeft="@+id/tvFollwerCount" style="@style/TextView" android:paddingLeft="15dip"/>
	<TextView android:id="@+id/tvLoading" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true"
	android:layout_below="@+id/ivFriendHeader" />
</RelativeLayout>

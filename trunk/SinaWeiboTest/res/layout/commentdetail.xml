<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<RelativeLayout android:id="@+id/rlCommentDetail"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_alignParentLeft="true" android:paddingLeft="10px" style="@style/TextView"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:id="@+id/tvUserScreenName" android:text=""></TextView>
		<TextView android:layout_below="@+id/tvUserScreenName" style="@style/TextView"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:id="@+id/tvCommentDetail" android:text=""
			android:layout_alignLeft="@+id/tvUserScreenName" android:paddingLeft="20px"
			android:paddingTop="5px"></TextView>
	</RelativeLayout>
</LinearLayout>

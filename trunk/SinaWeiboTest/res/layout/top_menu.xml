<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/btn_bg_normal"
	android:orientation="horizontal" style="@android:style/ButtonBar">
	<Button android:id="@+id/btnHome_TopMenu" android:background="@drawable/buttonpressed" 
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="vertical" android:drawableTop="@drawable/home"
		android:text="@string/top_menu_home" android:layout_weight="1" android:layout_gravity="center_vertical">
	</Button>
	<Button android:id="@+id/btnAtMe_TopMenu" android:background="@drawable/buttonpressed" 
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="vertical" android:drawableTop="@drawable/at"
		android:text="@string/top_menu_atme" android:layout_weight="1" android:layout_gravity="center_vertical">
	</Button>
		<Button android:id="@+id/btnChat_TopMenu" android:background="@drawable/btn_bg_normal" 
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="vertical" android:drawableTop="@drawable/chat"
		android:text="@string/top_menu_chat" android:layout_weight="1" android:layout_gravity="center_vertical">
	</Button>
		<Button android:id="@+id/btnMore_TopMenu" android:background="@drawable/buttonpressed" 
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="vertical" android:drawableTop="@drawable/more"
		android:text="@string/top_menu_more" android:layout_weight="1" android:layout_gravity="center_vertical">
	</Button>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<com.highjump.view.LoginView
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1" />
		<Button android:id="@+id/btnStart" android:layout_width="200px"
			android:layout_height="wrap_content" android:layout_centerHorizontal="true"
			android:layout_marginTop="50px" android:text="Start" />
		<Button android:id="@+id/btnRecord" android:layout_width="200px"
			android:layout_height="wrap_content" android:layout_below="@+id/btnStart"
			android:layout_alignLeft="@+id/btnStart" android:text="Record" />
		<Button android:id="@+id/btnExit" android:layout_width="200px"
			android:layout_height="wrap_content" android:layout_below="@+id/btnRecord"
			android:layout_alignLeft="@+id/btnRecord" android:text="Exit" />
	</RelativeLayout>
</LinearLayout>
